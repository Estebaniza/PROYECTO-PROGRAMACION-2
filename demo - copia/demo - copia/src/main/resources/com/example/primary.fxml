<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.PrimaryController">
    <children>
        <!-- Imagen de fondo con logo traslúcido -->
        <ImageView fx:id="logoImageView" preserveRatio="true" fitWidth="800" fitHeight="600" opacity="0.3"/>

        <!-- Contenedor principal para los elementos -->
        <VBox alignment="CENTER" spacing="20" layoutX="0" layoutY="0">
            <children>
                <!-- Campo de texto para la placa -->
                <TextField fx:id="plateTextField" promptText="Ingresa la placa" maxWidth="200"/>

                <!-- Botón de consulta -->
                <Button fx:id="submitButton" text="Consultar" onAction="#onSubmitButtonClick"/>
            </children>
        </VBox>
    </children>
</StackPane>
